page {
	font-size: 30rpx;
	font-family: PingFangSC-Regular, PingFang SC;
	font-weight: 400;
	color: rgba(51, 51, 51, 1);
}

.renzheng {
	position: relative;
	box-sizing: border-box;
	padding: 48rpx 30rpx;
	padding-bottom: 170rpx;
}

.renzheng2 {
	box-sizing: border-box;
	position: relative;
	padding: 30rpx 0 0 30rpx;
	padding-bottom: 170rpx;
}

.adress {
	height: 80rpx;
	line-height: 80rpx;
	display: flex;
	align-items: center;
}

.adressitem {
	box-sizing: border-box;
	padding-left: 10rpx;
	width: 144rpx;
	height: 66rpx;
}

.picker {
	position: relative;
	width: 130rpx;
	height: 78rpx;
	box-sizing: border-box;
	color: rgba(153, 153, 153, 1);
	background: rgba(242, 242, 242, 1);
	border-radius: 8rpx;
	overflow: hidden;
	white-space: nowrap;
	margin-left: 10rpx;
	line-height: 78rpx;
	text-align: center;
	padding: 0 5rpx;
}



.loupanbox {
	display: flex;
	flex-shrink: 0;
	align-items: center;
	margin: 40rpx 0;
	white-space: nowrap;
}


.loupanitem {
	width: 540rpx;
	height: 78rpx;
	line-height: 78rpx;
	background: rgba(242, 242, 242, 1);
	border-radius: 8rpx;
	margin-left: 10rpx;
	box-sizing: border-box;
	position: relative;
	color: rgba(153, 153, 153, 1);
	white-space: nowrap;
	overflow: hidden;
	padding-left: 20rpx;
}


.arrowicon {
	position: absolute;
	right: 10rpx;
	top: 50%;
	transform: translate(0, -50%);
}

.inputbox {
	height: 66rpx;
	display: flex;
	align-items: center;
	white-space: nowrap;
}

.inputuitem {
	box-sizing: border-box;
	margin-left: 10rpx;
	padding-left: 20rpx;
	width: 540rpx;
	height: 78rpx;
	background: rgba(242, 242, 242, 1);
	border-radius: 8px;
}

.tips {
	font-weight: 400;
	font-size: 24rpx;
	font-family: PingFangSC-Regular, PingFang SC;
	color:var(--basecolor);
}

.margintb {
	margin: 40rpx 0;
}

.myuploader {
	width: 210rpx;
	height: 210rpx;
	background: rgba(242, 242, 242, 1);
	border-radius: 8px;
	box-sizing: border-box;
	padding-top: 25%;
	display: flex;
	flex-direction: column;
	text-align: center;
	font-size: 28rpx;
	color: #999999;
}

.jpg {
	font-size: 24rpx;
	font-weight: 400;
	color: #999999;
	width: 220rpx;
}

.uploadview {
	border: rgba(0, 0, 0, 0.15) solid 1px;
	border-radius: 6rpx;
	width: 208rpx;
	height: 208rpx;
	font-size: 14px;
	background: rgba(0, 0, 0, 0.02);
}

.btn {
	position: absolute;
	bottom: 40rpx;
	left: 30rpx;
	right: 30rpx;
	background: linear-gradient(180deg, rgba(250, 125, 90, 1) 0%, rgba(251, 99, 84, 1) 100%);
	border-radius: 8px;
}