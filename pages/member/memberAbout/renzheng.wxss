page {
	font-size: 30rpx;
	font-family: PingFangSC-Regular, PingFang SC;
	font-weight: 400;
	color: rgba(51, 51, 51, 1);
}

.renzheng {
	position: relative;
	box-sizing: border-box;
	padding: 48rpx 20rpx;
	width: 710rpx;
	height: 1200rpx;
	margin: 48rpx auto;
	border-radius: 16rpx;
	box-shadow: 0px 4rpx 12rpx 0px rgba(0, 0, 0, 0.4);
	border: 2rpx solid rgba(255, 255, 255, 0);
}

.renzheng2 {
	position: relative;
	box-sizing: border-box;
	padding: 48rpx 20rpx;
	width: 710rpx;
	margin: 48rpx auto;
	border-radius: 16rpx;
	box-shadow: 0px 4rpx 12rpx 0px rgba(0, 0, 0, 0.4);
	border: 2rpx solid rgba(255, 255, 255, 0);
}

.adress {
	height: 80rpx;
	line-height: 80rpx;
	display: flex;
	align-items: center;
}

.adressitem {
	box-sizing: border-box;
	padding-left: 10rpx;
	width: 144rpx;
	height: 66rpx;
}

.picker {
	position: relative;
	width: 130rpx;
	height: 78rpx;
	box-sizing: border-box;
	color: rgba(153, 153, 153, 1);
	background: rgba(242, 242, 242, 1);
	border-radius: 8rpx;
	overflow: hidden;
	white-space: nowrap;
	margin-left: 10rpx;
	line-height: 78rpx;
	text-align: center;
	padding-left: 5rpx;
}



.loupanbox {
	display: flex;
	flex-shrink: 0;
	align-items: center;
	margin: 40rpx 0;
	white-space: nowrap;
}

.loupanitem>view {
	width: 100%;
	height: 100%;
}

.loupanitem {
	width: 540rpx;
	height: 78rpx;
	background: rgba(242, 242, 242, 1);
	border-radius: 8rpx;
	margin-left: 10rpx;
	box-sizing: border-box;
	position: relative;
	color: rgba(153, 153, 153, 1);
	white-space: nowrap;
	overflow: hidden;
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding-left: 20rpx;
}


.arrowicon {
	position: absolute;
	right: 10rpx;
	top: 50%;
	transform: translate(0, -50%);
}

.inputbox {
	height: 66rpx;
	display: flex;
	align-items: center;
	white-space: nowrap;
}

.inputuitem {
	box-sizing: border-box;
	margin-left: 10rpx;
	padding-left: 20rpx;
	width: 540rpx;
	height: 78rpx;
	background: rgba(242, 242, 242, 1);
	border-radius: 8px;
}

.tips {
	font-weight: 400;
	font-family: PingFangSC-Regular, PingFang SC;
	color: #FB6254;
}

.margintb {
	margin: 40rpx 0;
}

.jpg {
	font-size: 11px;
	font-weight: 400;
	color: rgba(0, 0, 0, 0.45);
	width: 206rpx;
}

.uploadview {
	border: rgba(0, 0, 0, 0.15) solid 1px;
	border-radius: 6rpx;
	width: 208rpx;
	height: 208rpx;
	font-size: 14px;
	background: rgba(0, 0, 0, 0.02);
}

.btn {
	position: absolute;
	bottom: 0;
	left: 0;
	right: 0;
}