page {
	background: #ededed;
	box-sizing: border-box;
}

.jifen {
	width: 750rpx;
	height: 220rpx;
	font-family: PingFangSC-Medium, PingFang SC;
	font-weight: 500;
	color: #fff;
	font-size: 44rpx;
	background: linear-gradient(180deg, rgba(250, 125, 90, 1) 0%, rgba(251, 99, 84, 1) 100%);
}

.tab {
	padding: 16rpx 34rpx 0 85rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
	font-size: 34rpx;
	height: 84rpx;
	font-weight: 500;
}

.tabitem {
	box-sizing: border-box;
	padding-bottom: 20rpx;
	position: relative;
}

.active {
	color: #FB6254;
}

.active::after {
	content: '';
	position: absolute;
	bottom: 0;
	width: 100%;
	background: rgba(251, 98, 84, 1);
	height: 4rpx;
}