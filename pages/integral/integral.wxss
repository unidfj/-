.jifen {
	width: 355*2rpx;
	height: 62*2rpx;
	background: rgba(221, 50, 50, 1);
	color: #fff;
	font-family: PingFangSC-bold;
	font-size: 14px;
	padding: 48rpx;
	border-radius: 16rpx;
	margin: 15rpx 10rpx;
}

.tab {
	width: 375px;
	height: 50px;
	border: 1px solid rgba(187, 187, 187, 1);
	font-size: 14px;

}

.tabitem {
	flex: 1;
	height: 50px;
	line-height: 50px;
	text-align: center;
}

.tabitem {
	position: relative;
}


.active::after {
	content: "";
	position: absolute;
	bottom: -4rpx;
	display: block;
	left: 90rpx;
	width: 62rpx;
	height: 3px;
	background: rgba(221, 50, 50, 1);
	margin: 0 auto;
}