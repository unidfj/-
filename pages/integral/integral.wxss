.jifen {
	width: 710rpx;
	height: 124rpx;
	background: rgba(221, 50, 50, 1);
	color: #fff;
	font-family: PingFangSC-bold;
	font-size: 14px;
	padding: 48rpx;
	border-radius: 16rpx;
	margin: 15rpx 10rpx;
}

.tab {
	width: 100%;
	height: 100rpx;
	border: 2rpx solid rgba(187, 187, 187, 1);
	font-size: 28rpx;

}

.tabitem {
	flex: 1;
	height: 100rpx;
	line-height: 100rpx;
	text-align: center;
}

.tabitem {
	position: relative;
}


.active::after {
	content: "";
	position: absolute;
	bottom: -4rpx;
	display: block;
	left: 90rpx;
	width: 62rpx;
	height: 6rpx;
	background: rgba(221, 50, 50, 1);
	margin: 0 auto;
}