.yue {
	width: 750rpx;
	height: 220rpx;
	background: linear-gradient(180deg, rgba(250, 125, 90, 1) 0%, rgba(251, 99, 84, 1) 100%);
	margin-bottom: 30rpx;
	font-family: PingFangSC-Regular, PingFang SC;
	font-size: 44rpx;
	color: #fff;
}

.tab {
	padding: 0 30rpx 0 120rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
	text-align: center;
	font-size: 28rpx;
	font-weight: 400;
	color: rgba(251, 98, 84, 1);
}

.scorlly {
	/* background: pink; */
	height: 80vh;
}

.detail {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 0 20rpx;
	margin: 10rpx 0;
	box-sizing: border-box;
	color: rgba(102, 102, 102, 1);
	margin-bottom: 20rpx;
}



.detailitem {
	flex-shrink: 0;
	text-align: center;
	/* white-space: nowrap; */
	overflow: hidden;
	text-overflow: ellipsis;
	font-size: 24rpx;
	color: #666;
}

.detailitem:nth-child(1) {
	max-width: 250rpx;
	text-align: left;
}

.detailitem:nth-child(2) {
	text-align: left;
}

.nomore {
	margin: 34rpx auto;
	text-align: center;
	color: #AAAAAA;
	font-size: 24rpx;
}