.zixunbox {
	width: 690rpx;
	margin: 32px auto;
	padding-bottom: 20rpx;
	background: #fff;
}

.zixunimg {
	width: 690rpx;
	height: 300rpx;
	border-radius: 8rpx;
	overflow: hidden;
}

.img {
	width: 100%;
	height: 100%;
}

.zixuntext {
	margin-top: 20rpx;
	padding: 0 30rpx;
	margin-bottom: 20rpx;
	font-size: 24rpx;
	font-family: PingFangSC-Regular, PingFang SC;
	font-weight: 400;
	color: rgba(51, 51, 51, 1);
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
}