@import "../../res/vant/common/index.wxss";

.block {
	width: 690rpx;
	position: relative;
	background: #fff;
	box-sizing: border-box;
	margin: 20rpx auto;
}

.pic {
	margin-bottom: 24rpx;
	width: 690rpx;
	height: 300rpx;
	border-radius: 8rpx;
	overflow: hidden;
}

.picimg {
	width: 100% !important;
	height: 100% !important;
}

.blockitem {
	margin: 0 20rpx 22rpx;
	display: flex;
	justify-content: space-between;
	background: #fff;
	padding-bottom: 30rpx;
}

.left {
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
}


.name {
	height: 44rpx;
	color: rgb(51, 51, 51);
	font-size: 28rpx;
	text-align: left;

	margin-bottom: 18rpx;

	font-family: PingFangSC-Medium, PingFang SC;
	font-weight: 500;
	color: rgba(51, 51, 51, 1);
}

.jiezhi {
	font-size: 22rpx;
	font-family: PingFangSC-Regular, PingFang SC;
	font-weight: 400;
	color: rgba(153, 153, 153, 1);
	margin-right: 20rpx;
}

.right {
	display: flex;
	margin-right: 10rpx;
	text-align: right;
	flex-direction: column;
	justify-content: space-around;
}

.canyu {
	font-size: 22rpx;
	font-family: PingFangSC-Regular, PingFang SC;
	font-weight: 400;
	color: rgba(251, 98, 84, 1);
	margin-bottom: 14rpx;
}

.btn {
	width: 180rpx;
	height: 58rpx;
	line-height: 58rpx;
	text-align: center;
	background: linear-gradient(180deg, rgba(250, 125, 90, 1) 0%, rgba(251, 99, 84, 1) 100%);
	border-radius: 8rpx;
	color: #fff;
}
.isEnd{
	background: #d8d8d8;
}

.end {
	background: rgba(216, 216, 216, 1) !important;
}

.text {
	color: rgba(187, 187, 187, 1);
	font-size: 28rpx;
	text-align: left;
	font-family: PingFangSC-regular;
	white-space: nowrap;
	overflow: hidden;
}

.texticon {
	z-index: 999;
	background-color: #fff;
}