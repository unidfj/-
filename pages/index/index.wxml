<!-- banner轮播 -->
<view class="diy-banner">
	<swiper autoplay class="banner-box swiper-box dot-round" duration="{{duration}}" circular="{{800}}" interval="{{3000}}" indicator-dots indicator-color="{{wxapp.BackgroundColor}}" indicator-active-color="{{wxapp.TopTextColor}}">
		<navigator hover-class="none" wx:for-item="banner" url="../news/index?id={{banner.id}}" wx:for="{{banner}}" wx:key="this">
			<swiper-item item-id="{{index}}">
				<image class="slide-image" mode="aspectFill" src="{{banner.image}}" data-id="{{index}}"></image>
			</swiper-item>
		</navigator>
	</swiper>
</view>


<view class="grid">
	<van-grid column-num="5" gutter="{{ 13 }}">
		<!--  -->
		<van-grid-item wx:for='{{3}}' icon="photo-o" text="文字" />

		<van-grid-item icon="photo-o" text="会员福利" />
		<van-grid-item icon="photo-o" text="会员注册" />
	</van-grid>
</view>

