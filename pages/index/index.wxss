.banner {
  margin: 24rpx 20rpx;
  position: relative;
  background-color: white;
  width: 710rpx;
  height: 408rpx;
}

.van-grid-item__text {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.grid {
  width: 100%;
  height: 160rpx;
  box-sizing: border-box;
  padding: 0 22rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.griditem {
  box-sizing: border-box;
  flex-shrink: 0;
  width: 118rpx;
  height: 160rpx;
  padding-top: 48rpx;
  padding-bottom: 16rpx;
  overflow: hidden;
  border-radius: 8rpx;
  background-color: rgba(255, 255, 255, 0);
  color: rgba(16, 16, 16, 1);
  text-align: center;
  font-family: Arial;
  border: 2rpx solid rgba(187, 187, 187, 1);
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  justify-content: space-between;
}

.griditem text {
  white-space: nowrap;
  overflow: hidden;
}


.remen {
  /* margin-top: 12px; */
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 88rpx;
  margin: 0 20rpx;
}

.remen::after {
  position: absolute;
  content: '';
  width: 6rpx;
  height: 40rpx;
  background: var(--basecolor);
  color: rgba(16, 16, 16, 1);

}

.remen .left {
  padding-left: 16rpx;
  font-size: 28rpx;
  font-family: PingFangSC-regular;
  font-weight: 600;
}


.card {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 20rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.carditem {
  box-sizing: border-box;
  flex-shrink: 0;
  width: 334rpx;
  height: 524rpx;
  margin-bottom: 32rpx;
  border-radius: 0px 0px 10rpx 10rpx;
  text-align: center;
  border: 2rpx solid rgba(239, 239, 239, 1);
}


.itemimg {
  width: 334rpx;
  height: 334rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.itemchit {
  margin-left: 12rpx;
  margin-top: 20rpx;
  color: rgba(16, 16, 16, 1);
  font-size: 28rpx;
  text-align: left;
  font-family: PingFangSC-regular;
}

.itemjifen {
  margin-top: 70rpx;
  margin-right: 14rpx;
  justify-content: space-between;
}

.jifenleft {
  margin-left: 20rpx;
  color: rgba(215, 89, 76, 1);
  font-size: 30rpx;
  text-align: left;

}

.jifenright {
  width: 114rpx;
  height: 46rpx;
  line-height: 46rpx;
  background-color: rgba(255, 67, 69, 1);
  text-align: center;
  border: 2rpx solid rgba(255, 0, 0, 0);
  color: #fff;
}