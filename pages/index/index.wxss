page {
  box-sizing: border-box;
  background: rgb(237, 237, 237, );
  font-family: PingFangSC-Regular, PingFang SC;
}

.banner {
  margin: 24rpx 20rpx;
  position: relative;
  background-color: white;
  width: 750rpx;
  height: 300rpx;
}

.van-grid-item__text {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.grid {
  background: #fff;
  box-sizing: border-box;
  width: 100%;
  height: 180rpx;
  padding: 0 22rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.griditem {
  flex-shrink: 0;
  height: 100%;
  padding: 32rpx 0;
  overflow: hidden;
  background-color: rgba(255, 255, 255, 0);
  color: rgba(16, 16, 16, 1);
  text-align: center;
  font-family: Arial;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  justify-content: space-between;
}

.griditem text {
  white-space: nowrap;
  overflow: hidden;
}

.adimgbox {
  margin: 30rpx auto 0;
  width: 690rpx;
  height: 200rpx;
}

.remen {
  position: relative;
  display: flex;
  font-size: 38rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  align-items: center;
  justify-content: space-between;
  margin: 34rpx 20rpx 23rpx 20rpx;
}

.remen::after {
  position: absolute;
  content: '';
  width: 6rpx;
  height: 40rpx;
  background: var(--basecolor);
  color: rgba(16, 16, 16, 1);
}
.remen  .left{
  padding-left: 16rpx;
}

.remen .right {
  font-size: 24rpx;
  color: rgba(251, 98, 84, 1);
}


.card {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 20rpx;
  border-radius: 8rpx;
  overflow: hidden;
  column-count: 2;
}

.carditem {
  box-sizing: border-box;
  flex-shrink: 0;
  width: 334rpx;
  margin-bottom: 32rpx;
  padding-bottom: 20rpx;
  border-radius: 0px 0px 10rpx 10rpx;
  text-align: center;
  border: 2rpx solid rgba(239, 239, 239, 1);
}


.itemimg {
  width: 334rpx;
  height: 334rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.goods_name {
  box-sizing: border-box;
  padding-left: 12rpx;
  margin-top: 20rpx;
  color: rgba(16, 16, 16, 1);
  font-size: 28rpx;
  text-align: left;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.itemjifen {
  margin-top: 40rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  justify-content: space-between;
}

.jifenleft {
  flex: 1;
  flex-shrink: 0;
  color: rgba(215, 89, 76, 1);
  font-size: 30rpx;
  text-align: left;
  white-space: nowrap;
  overflow: hidden;
}

.jifenright {
  width: 114rpx;
  height: 46rpx;
  line-height: 46rpx;
  background-color: rgba(255, 67, 69, 1);
  text-align: center;
  border: 2rpx solid rgba(255, 0, 0, 0);
  color: #fff;
}