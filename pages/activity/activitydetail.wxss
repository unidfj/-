page {
	box-sizing: border-box;
	padding-bottom: 100rpx;
}

.pic {
	height: 440rpx;
	border-radius: 8rpx;
	overflow: hidden;
}

.text {
	padding: 24rpx 30rpx;
	justify-content: space-between;
	font-weight: 600;
	font-family: PingFangSC-Medium, PingFang SC;
}

.canyu {
	padding-left: 30rpx;
	font-family: PingFangSC-Regular, PingFang SC;
	font-weight: 400;
	color: rgba(251, 98, 84, 1);
}

.bg {
	width: 750rpx;
	height: 20rpx;
	background: rgba(237, 237, 237, 1);
}

.contentimg {
	max-width: 690rpx;
	/* width: 100%; */
}

.left {
	color: #333;
	font-size: 28rpx;
	font-weight: 500;
}

.right {
	color: rgba(251, 98, 84, 1);
}


.time {
	padding: 20rpx 0 0 30rpx;
	font-family: PingFangSC-regular;
	font-size: 24rrpx;
}

.time1 {
	color: rgba(251, 98, 84, 1);
	margin-bottom: 10rpx;
}

.time2 {
	height: 40rpx;
	line-height: 40rpx;
	vertical-align: center;
	color: #666;
	margin-bottom: 28rpx;
	align-items: center;
}

.iconbox {
	width: 30rpx;
	height: 30rpx;
	margin-right: 20rpx;
}

.detail {
	margin: 20rpx auto;
	color: rgba(51, 51, 51, 1);
	font-size: 36rpx;
	font-weight: 600;
	text-align: center;
	font-family: PingFangSC-Medium, PingFang SC;
}

.detailtext {
	margin: 0 30rpx;
}

.btn {
	position: fixed;
	bottom: 0;
	left: 0;
	right: 0;
	height: 88rpx;
	line-height: 88rpx;
	background: linear-gradient(180deg, rgba(250, 125, 90, 1) 0%, rgba(251, 99, 84, 1) 100%);
	color: rgba(255, 255, 255, 1);
	text-align: center;
	font-size: 36rpx;
	font-family: PingFangSC-Regular, PingFang SC;
	font-weight: 400;
}

/* 只有商家才有的 */
.signuptitle {
	padding: 25rpx 30rpx 12rpx 30rpx;
	font-size: 28rpx;
	font-family: PingFangSC-Regular, PingFang SC;
	color: rgba(251, 98, 84, 1);
	justify-content: space-between;
	align-items: center;
	text-align: center;
}

.signuptitle view {
	flex: 1;
}

.people {
	justify-content: space-between;
	margin: 0 33rpx 23rpx 30rpx;
	font-size: 24rpx;
	font-family: PingFangSC-Regular, PingFang SC;
	font-weight: 400;
	color: rgba(102, 102, 102, 1);
	white-space: nowrap;
	overflow: auto;
}

.nomore {
	padding-top: 5rpx;
	color: rgb(170, 170, 170);
	font-weight: 400;
	font-size: 24rpx;
	text-align: center;
}



.overlaybox {
	width: 660rpx;
	height: 480rpx;
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
	padding-left: 40rpx;
	border-radius: 8rpx;
	overflow: hidden;
	background: #fff;

}

.overlaybox .info {
	line-height: 50rpx;
	text-align: center;
	margin: 40rpx 0 20rpx;
	position: relative;
}

.overlaybox .icon {
	position: absolute;
	right: 20rpx;
}

.overlaybox .inpbox {
	margin-left: 24rpx;
	margin-bottom: 20rpx;
	height: 78rpx;
	line-height: 78rpx;
}

.overlaybox .inp {
	width: 410rpx;
	height: 78rpx;
	border-radius: 8rpx;
	margin-left: 12rpx;
	border: #c1c1c1 solid 2rpx;
	background: rgb(242, 242, 242);
	box-sizing: border-box;
	padding: 15rpx 25rpx;
	color: rgb(153, 153, 153);

}

.overlaybox .tips {
	font-size: 24rpx;
	font-family: PingFangSC-Regular, PingFang SC;
	font-weight: 400;
	color: rgba(251, 98, 84, 1);
}

.overlaybox .sure {
	border-top: 1px solid rgb(229, 229, 229);
	background: #ffffff;
	position: absolute;
	bottom: 0;
	left: 0;
	right: 0;
	height: 96rpx;
	font-size: 36rpx;
	font-family: PingFangSC-Semibold, PingFang SC;
	font-weight: 600;
	color: rgba(251, 98, 84, 1);

}