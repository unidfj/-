page {
	background: #fff;
}

.tab {
	position: relative;
	box-sizing: border-box;
	margin: 12rpx auto 32rpx;
	width: 710rpx;
	height: 88rpx;
	text-align: center;
	box-shadow: 0px 4rpx 4rpx -2rpx rgba(0, 0, 0, 0.4);
	border: 2rpx solid rgba(255, 255, 255, 0);
}

.tabitem {
	flex: 1;
	flex-shrink: 0;
	box-sizing: border-box;
	position: relative;
	height: 100%;
}


.active::after {
	position: absolute;
	content: "";
	left: 50%;
	bottom: -3rpx;
	transform: translate(-50%, 0);
	width: 88rpx;
	height: 6rpx;
	background: rgba(221, 50, 50, 1);
}


.add {
	position: relative;
	margin: 20rpx auto;
	padding: 16rpx 118rpx 60rpx 64rpx;
	width: 710rpx;
	height: 1228rpx;
	box-sizing: border-box;
	border-radius: 8rpx;
	box-shadow: 0px 4rpx 4rpx -2rpx rgba(0, 0, 0, 0.4);
	border: 2rpx solid rgba(255, 255, 255, 0);
}


.m20 {
	margin: 24rpx 0;
}

.inp200 {
	box-sizing: border-box;
	margin-left: 10rpx;
	padding: 5rpx;
	width: 400rpx;
	height: 60rpx;
	border-radius: 8rpx;
	border: 2rpx solid rgba(187, 187, 187, 1);
	font-size: 28rpx;
	color: rgba(136, 136, 136, 1);
	font-family: Microsoft Yahei;
}

.title {
	display: flex;
	align-items: center;
	white-space: nowrap;
}

.time {
	display: flex;
	align-items: center;
	white-space: nowrap;
}

.time .timeitem {
	width: 166rpx;
	height: 60rpx;
	border-radius: 8rpx;
	color: rgba(136, 136, 136, 1);
	font-size: 28rpx;
	box-sizing: border-box;
	text-align: center;
	font-family: Microsoft Yahei;
	border: 2rpx solid rgba(187, 187, 187, 1);
	padding: 5rpx;
	margin: 0 10rpx;
}

.time .middle {
	margin: 0 10rpx;
}

.num {
	margin: 20rpx 0;
	display: flex;
	align-items: center;
	white-space: nowrap;
}

.text {
	margin: 20rpx 0;
	display: flex;
	white-space: nowrap;
}

.textarea {
	margin-left: 10rpx;
	box-sizing: border-box;
	padding: 5rpx;
	width: 400rpx;
	height: 500rpx;
	border-radius: 8rpx;
	border: 2rpx solid rgba(187, 187, 187, 1);
	color: rgba(136, 136, 136, 1);
	font-size: 28rpx;
	font-family: Microsoft Yahei;
}

.imgbox {
	display: flex;
	white-space: nowrap;
}

.imgbox .activityImg {
	width: 400rpx;
	height: 240rpx;
	border-radius: 8rpx;
	box-sizing: border-box;
	background: #e5e5e5;
	position: relative;
}

.imgbox .plusicon {
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
}

.tips {
	text-align: center;
	color: rgba(215, 42, 42, 1);
	font-size: 13px;
	text-align: left;
	font-family: PingFangSC-regular;
}

.btn {
	position: absolute;
	bottom: 0;
	left: 0;
	right: 0;
}