<view class="luckdraw_box">
	<view class="luckdraw_back">
		<image animation="{{animationData}}" mode="scaleToFill" src="./bg.jpg"></image>
	</view>
	<view id="luckdraw_pointer" bindtap='luckDrawStart'>
		<image mode="scaleToFill" src="./zhizhen.jpg"></image>
	</view>
	<view class="explain">
		<view>单次抽奖消耗积分： <text>{{cost}}</text></view>
		<view>您的积分余额： <text>{{total}}</text></view>
	</view>
</view>


<view class="code">
	<view class="left">我的兑奖码：</view>
	<view class="right">
		<text wx:for='{{uncomplete}}' wx:key='index'>{{item}}</text>
	</view>
</view>

<view class="rules">
	<view class="title">抽奖规则</view>
	<view class="text">
		<rich-text nodes='{{lucky_text}}'></rich-text>
	</view>
	<view>* 活动解释权归本平台所有</view>
</view>