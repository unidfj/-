#luckdraw_box {
	width: 531rpx;
	height: 531rpx;
	margin: 0 auto;
	position: relative;
	margin-top: 200rpx;
}

#luckdraw_back {
	width: 100%;
	height: 100%;
}

#luckdraw_back image {
	display: block;
	width: 100%;
	height: 100%;
	transform-origin: center center;
}

#luckdraw_pointer {
	width: 174rpx;
	height: 228rpx;
	position: absolute;
	left: 178.5rpx;
	z-index: 999;
	top: 132.5rpx;
}

#luckdraw_pointer image {
	display: block;
	width: 100%;
	height: 100%;
}

page {
	background: #060606;
}

.available {
	font-size: 1.5em;
	margin-top: 20rpx;
	color: #fff;
	display: flex;
	justify-content: center;
	align-items: center;
}